# Test Environment Variables
NODE_ENV=test
LOG_LEVEL=error

# Database (use separate test database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zaphub_test
DB_USER=postgres
DB_PASSWORD=postgresql
DB_POOL_MIN=2
DB_POOL_MAX=5

# Redis (use separate test database)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1

# API
PORT=3001
API_KEY_ENABLED=true
API_KEY=test-api-key-12345

# Webhook
WEBHOOK_TIMEOUT_MS=5000
WEBHOOK_RETRY_ATTEMPTS=2
WEBHOOK_RETRY_DELAY_MS=1000
WEBHOOK_MAX_BODY_SIZE=1048576

# Queue
QUEUE_REMOVE_ON_COMPLETE_AGE=3600
QUEUE_REMOVE_ON_COMPLETE_COUNT=100
QUEUE_REMOVE_ON_FAIL_AGE=86400

# Workers (lower concurrency for tests)
WORKER_SESSION_INIT_CONCURRENCY=2
WORKER_MESSAGE_SEND_CONCURRENCY=2
WORKER_MESSAGE_RECEIVE_CONCURRENCY=2
WORKER_WEBHOOK_CONCURRENCY=2

# Media storage (tests)
MEDIA_STORAGE=local
MEDIA_LOCAL_BASE_PATH=./storage/media-test
MEDIA_LOCAL_BASE_URL=
MEDIA_LOCAL_SERVE_STATIC=true
MEDIA_RETENTION_DAYS=7
MEDIA_S3_BUCKET=
MEDIA_S3_REGION=us-east-1
MEDIA_S3_ENDPOINT=
MEDIA_S3_ACCESS_KEY=
MEDIA_S3_SECRET_KEY=
MEDIA_S3_FORCE_PATH_STYLE=false
MEDIA_S3_BASE_URL=
MEDIA_S3_ACL=private
