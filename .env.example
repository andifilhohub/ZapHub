# Server
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database (Postgres)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zaphub
DB_USER=postgres
DB_PASSWORD=postgresql
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# BullMQ
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=5
QUEUE_BACKOFF_DELAY=1000

# WhatsApp / Baileys
AUTH_DATA_DIR=./auth_data
SESSION_TIMEOUT_MS=300000
# Webhook opcional para a inst√¢ncia simples (src/routes/routes.js)
BAILEYS_WEBHOOK_URL=
BAILEYS_WEBHOOK_TIMEOUT_MS=10000

# Security
API_KEY_ENABLED=false
API_KEY=your-secret-api-key-here
JWT_SECRET=your-jwt-secret-here

# Webhooks
WEBHOOK_TIMEOUT_MS=5000
WEBHOOK_RETRY_ATTEMPTS=3

# Observability
METRICS_ENABLED=true
METRICS_PORT=9090
